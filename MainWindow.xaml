<Window x:Class="SendIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendIt"
        mc:Ignorable="d"
        Title="SendIt" Height="450" Width="800" MinHeight="400" MinWidth="600">
    <Window.Resources>
        <SolidColorBrush x:Key="LightestGreen" Color="#D0F0E7"/>
        <SolidColorBrush x:Key="LighterGreen" Color="#AEE6D6"/>
        <SolidColorBrush x:Key="LightGreen" Color="#8FDDC6"/>
        <SolidColorBrush x:Key="MediumLightGreen" Color="#73D5B8"/>
        <SolidColorBrush x:Key="MediumGreen" Color="#5ACEAB"/>
        <SolidColorBrush x:Key="MediumDarkGreen" Color="#41C79E"/>
        <SolidColorBrush x:Key="DarkGreen" Color="#35B58E"/>
        <SolidColorBrush x:Key="DarkerGreen" Color="#2FA17E"/>
        <SolidColorBrush x:Key="DarkestGreen" Color="#2A8F70"/>
    </Window.Resources>

    <DockPanel Background="{StaticResource LightestGreen}">
        <Menu DockPanel.Dock="Top" Background="{StaticResource MediumGreen}">
            <MenuItem Header="Datoteka">
                <MenuItem Header="Izhod" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Stiki">
                <MenuItem Header="Dodaj statično"/>
                <MenuItem Header="Uredi statično"/>
                <MenuItem Header="Dodaj"/>
                <MenuItem Header="Uredi"/>
                <MenuItem Header="Odstrani"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0" Margin="10" Background="{StaticResource LighterGreen}">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                    <Image Height="64" Width="64" Source="/Images/default_avatar.png" Margin="0,10,0,5"/>
                    <Label Content="Username" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
                <ListView x:Name="contactsListView" MouseDoubleClick="ContactsListView_DoubleClick" 
                         Background="{StaticResource LighterGreen}" BorderThickness="0">
                    <ListViewItem>Contact 1</ListViewItem>
                    <ListViewItem>Contact 2</ListViewItem>
                    <ListViewItem>Contact 3</ListViewItem>
                </ListView>
            </DockPanel>

            <DockPanel Grid.Column="1" Margin="10">
                <TextBox DockPanel.Dock="Top" Text="Selected Contact" FontWeight="Bold" IsReadOnly="True" 
                        BorderThickness="0" Background="Transparent" Margin="0,0,0,10"/>

                <DockPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
                    <Button DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,5"
                           Background="{StaticResource MediumDarkGreen}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/send_icon.png" Height="16" Width="16"/>
                            <TextBlock Text="Pošlji" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button DockPanel.Dock="Right" Margin="10,0,0,0" Padding="10,5"
                           Background="{StaticResource MediumDarkGreen}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/emoji_icon.png" Height="16" Width="16"/>
                            <TextBlock Text="Emoji" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <TextBox AcceptsReturn="True" TextWrapping="Wrap" Text="Type your message here..."/>
                </DockPanel>

                <TextBlock Background="{StaticResource LighterGreen}" Padding="10" TextWrapping="Wrap">
                    This is where the conversation will appear.
                </TextBlock>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>